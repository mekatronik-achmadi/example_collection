<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="100">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="100"
            android:layout_weight="6">

        <EditText
                android:layout_width="0dp"
                android:layout_weight="85"
                android:layout_height="match_parent"
                android:id="@+id/txtURL"
                android:inputType="textUri"
                android:text="@string/txtURL"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_weight="15"
                android:layout_height="match_parent"
                android:id="@+id/btnGo"
                android:contentDescription="@string/btnGo" android:background="@android:drawable/ic_media_play"/>
    </LinearLayout>

    <ProgressBar
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/barLoad"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88"
            android:id="@+id/webView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="0dp"
            android:layout_weight="4">


        <ImageButton
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:id="@+id/btnBack"
                android:contentDescription="@string/btnBack"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:background="@android:drawable/ic_media_previous"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:id="@+id/btnNext"
                android:contentDescription="@string/btnNext"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:background="@android:drawable/ic_media_next"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:id="@+id/btnStop"
                android:contentDescription="@string/btnStop"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:background="@android:drawable/ic_media_pause"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:id="@+id/btnReload"
                android:contentDescription="@string/btnReload"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:background="@android:drawable/ic_menu_rotate"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:id="@+id/btnHome"
                android:contentDescription="@string/btnHome"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:background="@android:drawable/ic_menu_search"/>
    </LinearLayout>
</LinearLayout>

